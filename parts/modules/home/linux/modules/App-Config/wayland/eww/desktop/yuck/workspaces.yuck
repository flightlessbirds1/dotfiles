(defvar workspaces0 "(label :text \"...\")")
(defvar workspaces1 "(label :text \"...\")")
(defvar workspacesSelected 0)

(defwidget workspaces []
  (stack
  ; This width is needed to prevent a janky transition when adding and deleting workspaces.
  ; The jank can be seen in the right corner.
    :width 1000
    :selected workspacesSelected
    (literal
      :halign "end"
      :content workspaces0
    )
    (literal
      :halign "end"
      :content workspaces1
    )
  )
)
